---
const { title = "Visit Korea Planner", bodyClass = "" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Fraunces:wght@400;600;700&family=Work+Sans:wght@300;400;500;600&display=swap");

      :root {
        color-scheme: light;
        --ink: #13213a;
        --ink-soft: #34425e;
        --muted: #5f6b84;
        --paper: #f7f1ea;
        --paper-strong: #efe5d9;
        --accent: #1f6f8b;
        --accent-strong: #13566c;
        --accent-warm: #f5a35b;
        --card: rgba(255, 255, 255, 0.86);
        --ring: rgba(31, 111, 139, 0.35);
        --shadow: 0 20px 45px rgba(15, 32, 60, 0.18);
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: "Work Sans", system-ui, sans-serif;
        color: var(--ink);
        background: radial-gradient(circle at top left, #fce9d4, transparent 45%),
          radial-gradient(circle at 10% 40%, #d8eef2, transparent 45%),
          linear-gradient(140deg, #f9f0e6 0%, #f1e5d7 55%, #dfe7ee 100%);
        min-height: 100vh;
      }

      body.home-bg {
        background: linear-gradient(180deg, rgba(12, 16, 24, 0.45), rgba(12, 16, 24, 0.65)),
          url("/hero.webp");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      main {
        width: min(1100px, 92vw);
        margin: 0 auto;
        padding: 48px 0 80px;
      }

      .skip-link {
        position: absolute;
        left: -999px;
        top: 0;
      }

      .skip-link:focus {
        left: 16px;
        top: 16px;
        background: #fff;
        padding: 8px 12px;
        border-radius: 999px;
        box-shadow: var(--shadow);
      }

      @media (max-width: 720px) {
        main {
          padding: 32px 0 64px;
        }
      }
    </style>
  </head>
  <body class={bodyClass}>
    <a href="#content" class="skip-link">Skip to content</a>
    <main id="content">
      <slot />
    </main>
  </body>
</html>
