---
const { title = "Visit Korea Planner", bodyClass = "" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Fraunces:wght@400;600;700&family=Work+Sans:wght@300;400;500;600&display=swap");

      :root {
        color-scheme: light;
        --ink: #121826;
        --ink-soft: #2f3b52;
        --muted: #5a6a80;
        --paper: #f6f3ee;
        --paper-strong: #efe9e1;
        --bg-subpage: #d9c7b2;
        --bg-leaf: #d9c7b2;
        --accent: #1f6f8b;
        --accent-strong: #0f5b75;
        --accent-warm: #f4b06a;
        --card: rgba(255, 255, 255, 0.92);
        --ring: rgba(31, 111, 139, 0.22);
        --shadow: 0 24px 50px rgba(15, 32, 60, 0.16);
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: "Work Sans", system-ui, sans-serif;
        color: var(--ink);
        background: radial-gradient(circle at top left, rgba(255, 241, 224, 0.95), transparent 52%),
          radial-gradient(circle at 90% 12%, rgba(195, 233, 255, 0.6), transparent 50%),
          linear-gradient(160deg, #fbf8f3 0%, #f2f7fb 55%, #e8f0f7 100%);
        min-height: 100vh;
      }

      body.page--sub {
        background: var(--bg-subpage);
      }

      body.page--leaf {
        background: var(--bg-leaf);
      }

      body.home-bg {
        background: linear-gradient(180deg, rgba(8, 12, 18, 0.15), rgba(8, 12, 18, 0.45)),
          linear-gradient(90deg, rgba(10, 20, 35, 0.25), rgba(10, 20, 35, 0.05)),
          url("/hero.webp");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
      }

      body.page--sub main,
      body.page--leaf main {
        background: transparent;
        border-radius: 30px;
        border: 1px solid rgba(74, 64, 52, 0.2);
        box-shadow: 0 22px 50px rgba(40, 30, 20, 0.12);
        padding: 48px 36px 80px;
      }

      @media (max-width: 720px) {
        body.page--sub main,
        body.page--leaf main {
          padding: 32px 18px 64px;
        }
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      main {
        width: min(1100px, 92vw);
        margin: 0 auto;
        padding: 48px 0 80px;
      }

      .skip-link {
        position: absolute;
        left: -999px;
        top: 0;
      }

      .skip-link:focus {
        left: 16px;
        top: 16px;
        background: #fff;
        padding: 8px 12px;
        border-radius: 999px;
        box-shadow: var(--shadow);
      }

      @media (max-width: 720px) {
        main {
          padding: 32px 0 64px;
        }
      }
    </style>
  </head>
  <body class={bodyClass}>
    <a href="#content" class="skip-link">Skip to content</a>
    <main id="content">
      <slot />
    </main>
  </body>
</html>
