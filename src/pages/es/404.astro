---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { withLang } from "../../lib/i18n";
import { absoluteUrl } from "../../lib/site";

Astro.response.status = 404;

const lang = "es";
const title = "Página no encontrada | Planificador de viaje a Corea";
const description = "La página que buscas no existe.";
---

<BaseLayout
  title={title}
  description={description}
  bodyClass="page--leaf"
  lang={lang}
  canonicalUrl={absoluteUrl(withLang("/404", "es"))}
  alternateEnUrl={absoluteUrl("/404")}
  alternateEsUrl={absoluteUrl(withLang("/404", "es"))}
  noindex
>
  <section style="padding: 64px 0; text-align: center;">
    <h1 class="t-h1" style="font-family: Fraunces, serif;">
      Página no encontrada
    </h1>
    <p class="t-subheading" style="color: #c9c1b6;">
      {description}
    </p>
    <a
      href={withLang("/", lang)}
      style="display: inline-flex; margin-top: 18px; padding: 10px 18px; border-radius: 999px; background: #7c5cff; color: #fff;"
    >
      Ir al inicio
    </a>
  </section>
</BaseLayout>
